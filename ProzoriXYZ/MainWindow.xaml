<Window x:Class="ProzoriXYZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProzoriXYZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="34">
    <StackPanel>
        <UniformGrid  Columns="2">
            <Label >Ime:</Label>
            <TextBox Text="{Binding Path=Ime, UpdateSourceTrigger=PropertyChanged}"/>
            <Label >Prezime:</Label>
            <TextBox  Text="{Binding Path=Prezime, UpdateSourceTrigger=PropertyChanged}"/>
            <Label >Godiste:</Label>
            <TextBox  Text="{Binding Path=Godiste, UpdateSourceTrigger=PropertyChanged}"/>
        </UniformGrid>
        <Button FontSize="34">TEEEEST</Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label FontSize="34" Content="{Binding Path=Ime}" />
            <Label FontSize="34" Content="{Binding Path=Prezime}"/>
            <Label FontSize="34" Content="{Binding Path=Godiste}"/>
        </StackPanel>
        <DataGrid Name="dg" ColumnWidth="*"/>
    </StackPanel>
</Window>
